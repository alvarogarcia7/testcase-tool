{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/testcase-schema.json",
  "title": "Test Case Schema",
  "description": "Schema for validating test case YAML files",
  "type": "object",
  "required": ["id"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the test case",
      "pattern": "^[A-Z0-9]+_I[0-9]+_TC[0-9]+$"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Tags for categorizing the test case"
        },
        "categories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Categories for the test case"
        }
      },
      "additionalProperties": true
    },
    "description": {
      "type": "string",
      "description": "Detailed description of the test case"
    },
    "prerequisites": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of prerequisites that must be met before running the test"
    },
    "commands": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["step"],
        "properties": {
          "step": {
            "type": "integer",
            "minimum": 1,
            "description": "Step number"
          },
          "description": {
            "type": "string",
            "description": "Description of this step"
          },
          "notes": {
            "type": "string",
            "description": "Additional notes for this step"
          },
          "commands": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of commands to execute"
          },
          "expected_status": {
            "type": "integer",
            "description": "Expected exit status code"
          },
          "expected_output": {
            "type": "string",
            "description": "Expected output from the commands"
          }
        },
        "additionalProperties": true
      },
      "description": "List of test steps with commands"
    },
    "verification_commands": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "description": "Description of the verification"
          },
          "commands": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Commands to run for verification"
          }
        },
        "additionalProperties": true
      },
      "description": "Commands to verify test results"
    },
    "results": {
      "type": "object",
      "properties": {
        "expected": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string",
              "description": "Description of expected results"
            },
            "expected_outputs": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "field": {
                    "type": "string"
                  },
                  "value": {},
                  "condition": {
                    "type": "string"
                  }
                }
              }
            },
            "verification_commands": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "description": {
                    "type": "string"
                  },
                  "command": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "additionalProperties": true
        },
        "actual": {
          "type": "object",
          "properties": {
            "log_file": {
              "type": "string",
              "description": "Path to the actual execution log file"
            },
            "execution_date": {
              "type": "string",
              "format": "date-time",
              "description": "Date and time of execution"
            },
            "executed_by": {
              "type": "string",
              "description": "Who executed the test"
            },
            "environment": {
              "type": "string",
              "description": "Environment where the test was executed"
            },
            "summary": {
              "type": "object",
              "properties": {
                "overall_status": {
                  "type": "string",
                  "enum": ["PASS", "FAIL", "SKIP", "BLOCKED", "ERROR"],
                  "description": "Overall test status"
                }
              },
              "additionalProperties": true
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "verification": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "enum": ["PASS", "FAIL", "SKIP", "BLOCKED", "ERROR"],
          "description": "Verification status"
        },
        "comments": {
          "type": "string",
          "description": "Comments about the verification"
        },
        "executed_by": {
          "type": "string",
          "description": "Who performed the verification"
        },
        "execution_date": {
          "type": "string",
          "format": "date-time",
          "description": "Date and time of verification"
        },
        "environment": {
          "type": "string",
          "description": "Environment where verification was performed"
        },
        "verification_steps": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "check": {
                "type": "string"
              },
              "result": {
                "type": "string"
              }
            }
          }
        },
        "issues": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "issue_id": {
                "type": "string"
              },
              "severity": {
                "type": "string"
              },
              "description": {
                "type": "string"
              }
            }
          },
          "description": "List of issues found during verification"
        },
        "notes": {
          "type": "string",
          "description": "Additional notes"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
